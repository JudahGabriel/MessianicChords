@page "/browse/artists"
@page "/home/artists"

@foreach (var (artist, chords) in chordsByArtist)
{
    <div>
        <div class="grouped-results-header mt-5 mb-5">
            <span>@artist</span>
        </div>
        <div class="d-flex flex-wrap justify-content-center">
            @foreach (var chordSheet in chords)
            {
                <ChordCard ChordSheet="@chordSheet"></ChordCard>
            }
        </div>
    </div>
}

<div class="d-grid mt-4 mb-5 col-lg-3 col-md-4 mx-auto">
    <LoadMoreButton List="@allChords"></LoadMoreButton>
</div>