@page "/sitemap"
@model MessianicChords.Pages.SitemapModel
<?xml version="1.0" encoding="UTF-8" ?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <url>
        <loc>https://messianicchords.com</loc>
        <lastmod>@Model.LastUpdatedChordDate.ToString("o")</lastmod>
        <changefreq>weekly</changefreq>
        <priority>1</priority>
    </url>
    <url>
        <loc>https://messianicchords.com/browse/newest</loc>
        <lastmod>@Model.LastUpdatedChordDate.ToString("o")</lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.8</priority>
    </url>
    <url>
        <loc>https://messianicchords.com/browse/songs</loc>
        <lastmod>@Model.LastUpdatedChordDate.ToString("o")</lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.8</priority>
    </url>
    <url>
        <loc>https://messianicchords.com/browse/artists</loc>
        <lastmod>@Model.LastUpdatedChordDate.ToString("o")</lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.8</priority>
    </url>
    <url>
        <loc>https://messianicchords.com/browse/random</loc>
        <lastmod>@DateTime.UtcNow.ToString("o")</lastmod>
        <changefreq>yearly</changefreq>
        <priority>0.8</priority>
    </url>
    <url>
        <loc>https://messianicchords.com/legal</loc>
        <changefreq>yearly</changefreq>
        <priority>0.2</priority>
    </url>
    @foreach (var doc in Model.Chords)
    {
        <url>
            <loc>https://messianicchords.com/@(doc.Id)</loc>
            <lastmod>@(doc.LastUpdated.ToString("o"))</lastmod>
            <changefreq>yearly</changefreq>
            <priority>0.5</priority>
        </url>
    }
</urlset>