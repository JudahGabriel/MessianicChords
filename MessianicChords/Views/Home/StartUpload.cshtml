<div class="upload-container">
    @using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input type="file" multiple="multiple" name="theFile" data-bind="visible: !isLoading()" />
        @*<input type="file" multiple="multiple" name="theFile" id="theFile" />*@
        <input type="submit" value="Upload" data-bind="visible: !isLoading()" />
        
    }
    <div data-bind="visible: isLoading">
        <span>Uploading your chords. Just a sec...</span>
        <img src="../../Content/loading.gif" />
    </div>
</div>

<link href='http://fonts.googleapis.com/css?family=Lora|Homemade+Apple' rel='stylesheet' type='text/css' />
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.9.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("http://ajax.aspnetcdn.com/ajax/knockout/knockout-2.2.1.js")" type="text/javascript"></script>
<script type="text/javascript">

    var vm = {
        isLoading: ko.observable(false),
        onSubmit: function () { vm.isLoading(true); return true; }
    }
    ko.applyBindings(vm, $(".upload-container")[0]);

</script>